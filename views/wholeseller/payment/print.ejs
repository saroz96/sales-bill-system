<div class="form-control">
    <%- include('../layouts/boilerplate', { title: '' , body: '' }) %>
</div>

<div class="container" id="mainContainer">
    <div class="voucher" id="voucher">
        <!-- Print Header -->
        <div id="printHeader" class="text-center">
            <div class="header" style="text-align: center;">
                <h2 class="card-subtitle">
                    <%= currentCompanyName %>
                </h2>
                <b>
                    <h4>
                        <%= currentCompany.address %>-<%=currentCompany.ward%>, <%=currentCompany.city%>,
                                    <%=currentCompany.country%>
                                        <br>
                                        VAT NO.: <span id="pan-vat-container">
                                        </span>
                    </h4>
                </b>
                <hr style="border: 0.5px solid;">
            </div>
        </div>
        <h1 class="text-center" style="text-decoration: underline;letter-spacing: 3px;">Payment Voucher</h1>
        <table class="voucher-table">
            <tbody>
                <tr>
                    <th>Voucher Number:</th>
                    <td>
                        <%= payment.billNumber %>
                    </td>
                </tr>
                <tr>
                    <th>Date:</th>
                    <td>
                        <%= payment.date.toLocaleDateString() %>
                    </td>
                </tr>
                <tr>

                    <th>Debited Account:</th>
                    <td>
                        <% if (payment.isActive) { %>

                            <%= payment.account.name %>
                                <% } else { %>
                                    <span class="text-danger">Canceled</span>
                                    <% } %>
                    </td>

                </tr>
                <tr>
                    <th>Payment Account:</th>
                    <td>
                        <% if (payment.isActive) { %>
                            <%= payment.paymentAccount.name %>
                                <% } else { %>
                                    <span class="text-danger">Canceled</span>
                                    <% } %>
                    </td>
                </tr>
                <tr>
                    <th>Debit Amount:</th>
                    <td>
                        <% if (payment.isActive) { %>

                            <%= payment.debit %>
                                <% } else { %>
                                    <span class="text-danger">0.00</span>
                                    <% } %>
                    </td>
                </tr>
            </tbody>
        </table>

        <h2>Transactions</h2>
        <table class="voucher-table">
            <tr>
                <th>Payment Account</th>
                <th>Inst. Type</th>
                <th>Inst. No.</th>
            </tr>
            <tr>
                <td>
                    <% if (payment.isActive) { %>

                        <%= payment.paymentAccount.name %>
                            <% } else { %>
                                <span class="text-danger">Canceled</span>
                                <% } %>
                </td>
                <td>
                    <%= payment.InstType? payment.InstType :"Null" %>
                </td>
                <td>
                    <%= payment.InstNo? payment.InstNo:"Null" %>
                </td>
            </tr>
        </table>
        <p>Note: <%=payment.description%>
        </p>
        <div class="text-center mt-4">
            <button class="btn btn-primary" onclick="window.print()">Print Voucher</button>
            <a href="/payments-list" class="btn btn-secondary">Payments</a>
            <a href="/payments" class="btn btn-secondary">Make Payment</a>
        </div>
    </div>
</div>

<style>
    @media print {
        @page {
            size: A3 portrait;
            margin: 0;
        }

        body * {
            visibility: hidden;
        }

        #voucher,
        #voucher * {
            visibility: visible;
        }

        #voucher {
            position: absolute;
            left: 0;
            top: 0;
        }

        .text-center button,
        .text-center a {
            display: none;
            /* Hide buttons during print */
        }
    }

    .voucher {
        width: 297mm;
        /* A3 width */
        height: 420mm;
        /* A3 height */
        padding: 20mm;
        margin: auto;
        border: 1px solid black;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        font-family: Arial, sans-serif;
        overflow: hidden;
    }

    .voucher-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

    .voucher-table th,
    .voucher-table td {
        border: 1px solid black;
        padding: 12px;
        text-align: left;
        font-size: 16px;
    }

    .voucher-table th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    h1 {
        font-size: 28px;
        margin-bottom: 10px;
        text-align: center;
    }

    .text-center {
        text-align: center;
    }

    .btn {
        padding: 10px 20px;
        font-size: 16px;
    }

    button {
        margin-right: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 5px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    @media (max-width: 768px) {
        .voucher {
            padding: 10mm;
        }

        .voucher-table th,
        .voucher-table td {
            font-size: 14px;
            padding: 8px;
        }

        h1 {
            font-size: 24px;
        }
    }
</style>

<script>
    const panVatNo = '<%= currentCompany.pan %>';
    const container = document.getElementById('pan-vat-container');

    for (let i = 0; i < panVatNo.length; i++) {
        const digit = document.createElement('span');
        digit.className = 'bordered-digit';
        digit.textContent = panVatNo[i];
        container.appendChild(digit);
    }

    // Optional: Show loading spinner while fetching data
    function showLoadingSpinner() {
        document.getElementById('loadingSpinner').style.display = 'block';
    }
</script>
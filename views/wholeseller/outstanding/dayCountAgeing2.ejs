<%- include('../layouts/boilerplate', { title: '' , body: '' }) %>

    <style id="printStyles" media="print">
        body {
            -webkit-print-color-adjust: exact;
            color-adjust: exact;
            font-size: 12px;
            filter: grayscale(100%) !important;
            -webkit-filter: grayscale(100%) !important;
        }

        .container {
            width: 100%;
            margin: 0;
            padding: 0;
        }

        .no-print {
            display: none !important;
        }

        .print-only {
            display: block !important;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #000 !important;
            color: #000 !important;
            padding: 6px;
            text-align: left;
            background-color: white !important;
        }

        h1,
        h2,
        h3,
        h4,
        h5 {
            margin: 5px 0;
            color: #000 !important;
        }

        .print-header {
            text-align: center;
            margin-bottom: 15px;
        }

        .text-danger,
        .text-success {
            color: #000 !important;
        }

        .badge {
            background-color: #ddd !important;
            color: #000 !important;
        }
    </style>

    <style>
        /* Main Layout */
        .wow-form {
            width: 90%;
            max-width: 99%;
            margin: 20px auto;
            padding: 0 10px;
        }

        .card {
            width: 100%;
            margin: 0;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
        }

        /* Form Styling */
        form {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            height: 42px;
            border-radius: 4px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        label {
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
        }

        /* Button Styling */
        .btn {
            padding: 10px 15px;
            font-weight: 500;
            border-radius: 4px;
            transition: all 0.3s;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
        }

        .btn-primary:hover {
            background-color: #3a5ec0;
            border-color: #3a5ec0;
        }

        .btn-info {
            background-color: #36b9cc;
            border-color: #36b9cc;
        }

        .btn-info:hover {
            background-color: #2a96a5;
            border-color: #2a96a5;
        }

        /* Table Styling */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
            background-color: #f8f9fa;
            font-weight: 600;
            padding: 12px;
        }

        .table tbody tr {
            transition: all 0.2s;
        }

        .table tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .table td {
            padding: 12px;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        /* Alert Styling */
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-info {
            color: #0c5460;
            background-color: #d1ecf1;
            border-color: #bee5eb;
        }

        .alert-warning {
            color: #856404;
            background-color: #fff3cd;
            border-color: #ffeeba;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .col {
                margin-bottom: 15px;
            }

            .btn {
                width: 100%;
                margin-top: 5px !important;
            }
        }

        .selected-row {
            background-color: #5897FB !important;
            color: white !important;
            font-weight: bold;
        }

        .selected-row td {
            background-color: #5897FB !important;
            color: white;
        }

        .text-danger {
            color: #e74a3b !important;
        }

        .text-success {
            color: #1cc88a !important;
        }
    </style>

    <div class="container wow-form">
        <div class="card shadow-lg">
            <div class="card-body">
                <form action="/day-count-aging/<%= account._id %>" method="get" class="mb-4">
                    <div class="row">
                        <% if (companyDateFormat==='english' ) { %>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="fromDate">From Date:</label>
                                    <input type="date" name="fromDate" id="fromDate" class="form-control"
                                        value="<%= fromDate ? fromDate : (currentFiscalYear ? new Date(currentFiscalYear.startDate).toISOString().substr(0, 10) : new Date().toISOString().substr(0, 10)) %>"
                                        autofocus>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="toDate">To Date:</label>
                                    <input type="date" name="toDate" id="toDate" class="form-control"
                                        value="<%= toDate || new Date().toISOString().split('T')[0] %>">
                                </div>
                            </div>
                            <% } else { %>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="fromDate">From Date:</label>
                                        <input type="text" name="fromDate" id="fromDate"
                                            class="form-control nepali-datepicker"
                                            value="<%= fromDate ? fromDate : (currentFiscalYear ? new Date(currentFiscalYear.startDate).toISOString().substr(0, 10) : new Date().toISOString().substr(0, 10)) %>"
                                            autofocus>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="toDate">To Date:</label>
                                        <input type="text" name="toDate" id="toDate"
                                            class="form-control nepali-datepicker" value="<%= toDate || nepaliDate %>">
                                    </div>
                                </div>
                                <% } %>
                                    <div class="col">
                                        <div class="form-group" style="margin-top: 25px;">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-chart-line"></i> Generate Report
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group" style="margin-top: 25px;">
                                            <button type="button" class="btn btn-info" onclick="printReport()">
                                                <i class="fas fa-print"></i> Print Report
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group" style="margin-top: 25px;">
                                            <a href="/aging/accounts">
                                                <button type="button" id="backButton" class="back-button">
                                                    <span class="icon">‚Üê</span>Back

                                                </button>
                                            </a>
                                        </div>
                                    </div>
                    </div>
                </form>

                <style>
                    .back-button {
                        background-color: #007bff;
                        /* Blue background */
                        color: white;
                        /* White text */
                        border: none;
                        /* No border */
                        padding: 8px 20px;
                        /* Padding */
                        font-size: 16px;
                        /* Font size */
                        cursor: pointer;
                        /* Pointer cursor on hover */
                        border-radius: 5px;
                        /* Rounded corners */
                        display: flex;
                        align-items: center;
                        gap: 8px;
                        /* Space between icon and text */
                    }

                    .back-button:hover {
                        background-color: #0056b3;
                        /* Darker blue on hover */
                    }

                    .icon {
                        font-size: 20px;
                        /* Icon size */
                    }
                </style>

                <% if (!fromDate || !toDate) { %>
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i> Please generate to view report
                    </div>
                    <% } else if (agingData.transactions.length===0) { %>
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-circle"></i> No transactions found for the selected date range
                        </div>
                        <% } else { %>
                            <div id="printableContent">
                                <div class="print-header no-print">
                                    <h3 class="text-primary">
                                        <%= currentCompanyName %>
                                    </h3>
                                    <h4>Ageing Receivables/Payables</h4>
                                    <p class="text-muted">Generated on: <%= new Date().toLocaleString() %>
                                    </p>
                                    <hr>
                                </div>

                                <div class="mb-4">
                                    <h4 class="text-primary no-print">
                                        <i class="fas fa-user-circle"></i> Account: <%= account.name %>
                                    </h4>
                                    <div class="d-flex justify-content-between no-print">
                                        <div>
                                            <strong>Report Period:</strong>
                                            <%= new Date(fromDate).toLocaleDateString() %> to <%= new
                                                    Date(toDate).toLocaleDateString() %>
                                        </div>
                                        <div>
                                            <strong>Opening Balance:</strong>
                                            <span class="font-weight-bold">
                                                <%= account.openingBalance.amount.toFixed(2) %>
                                                    <%= account.openingBalance.type %>
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Print View (single row layout) -->
                                    <div class="d-none print-only">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Report Period:</strong>
                                                <%= new Date(fromDate).toLocaleDateString() %> to <%= new
                                                        Date(toDate).toLocaleDateString() %>
                                            </span>
                                            <span><strong>Opening Balance:</strong> <span class="font-weight-bold">
                                                    <%= account.openingBalance.amount.toFixed(2) %>
                                                        <%= account.openingBalance.type %>
                                                </span></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="table-container">
                                    <table class="table table-striped table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Date</th>
                                                <th>Age (Days)</th>
                                                <th>Details</th>
                                                <th class="text-right">Debit</th>
                                                <th class="text-right">Credit</th>
                                                <th class="text-right">Balance</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% agingData.transactions.forEach(transaction=> { %>
                                                <tr class="table-row" data-id="<%= transaction._id %>">
                                                    <td>
                                                        <%= new
                                                            Date(transaction.date).toLocaleDateString(companyDateFormat==='nepali'
                                                            ? 'en-NP' : 'en-US' ) %>
                                                    </td>
                                                    <td>
                                                        <%= transaction.age %> days
                                                    </td>
                                                    <td>
                                                        <% if (transaction.type==='Sale' ) { %>
                                                            <i class="fas fa-file-invoice-dollar text-primary"></i>
                                                            Sale
                                                            <% } else if (transaction.type==='Purc' ) { %>
                                                                <i class="fas fa-shopping-cart text-info"></i>
                                                                Purchase
                                                                <% } else if (transaction.type==='PrRt' ) { %>
                                                                    <i class="fas fa-undo text-warning"></i>
                                                                    Purchase Return
                                                                    <% } else if (transaction.type==='Slrt' ) { %>
                                                                        <i class="fas fa-exchange-alt text-danger"></i>
                                                                        Sales Return
                                                                        <% } else if (transaction.type==='Pymt' ) { %>
                                                                            <i
                                                                                class="fas fa-money-bill-wave text-success"></i>
                                                                            Payment
                                                                            <% } else if (transaction.type==='Rcpt' ) {
                                                                                %>
                                                                                <i
                                                                                    class="fas fa-hand-holding-usd text-success"></i>
                                                                                Receipt
                                                                                <% } else if (transaction.type==='DrNt'
                                                                                    ) { %>
                                                                                    <i
                                                                                        class="fas fa-file-alt text-danger"></i>
                                                                                    Debit Note
                                                                                    <% } else if
                                                                                        (transaction.type==='CrNt' ) {
                                                                                        %>
                                                                                        <i
                                                                                            class="fas fa-file-alt text-success"></i>
                                                                                        Credit Note
                                                                                        <% } else if
                                                                                            (transaction.type==='Jrnl' )
                                                                                            { %>
                                                                                            <i
                                                                                                class="fas fa-book text-secondary"></i>
                                                                                            Journal
                                                                                            <% } %>
                                                    </td>
                                                    <td class="text-right text-danger">
                                                        <%= transaction.debit.toFixed(2) %>
                                                    </td>
                                                    <td class="text-right text-success">
                                                        <%= transaction.credit.toFixed(2) %>
                                                    </td>
                                                    <td class="text-right font-weight-bold">
                                                        <%= (transaction.balance>= 0 ?
                                                            transaction.balance.toFixed(2) + ' Cr' :
                                                            (-transaction.balance).toFixed(2) + ' Dr') %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Row highlighting functionality
            let tableRows = document.querySelectorAll(".table-row");
            let currentIndex = 0;

            function updateRowHighlight() {
                tableRows.forEach(row => row.classList.remove("selected-row"));
                if (currentIndex >= 0 && currentIndex < tableRows.length) {
                    tableRows[currentIndex].classList.add("selected-row");
                    tableRows[currentIndex].scrollIntoView({
                        behavior: "smooth",
                        block: "nearest",
                        inline: "nearest"
                    });
                }
            }

            // Highlight the first row initially
            if (tableRows.length > 0) {
                updateRowHighlight();
            }

            // Keyboard navigation
            document.addEventListener("keydown", function (event) {
                if (event.key === "ArrowDown") {
                    if (currentIndex < tableRows.length - 1) {
                        currentIndex++;
                        updateRowHighlight();
                    }
                } else if (event.key === "ArrowUp") {
                    if (currentIndex > 0) {
                        currentIndex--;
                        updateRowHighlight();
                    }
                } else if (event.key === "Enter" && currentIndex >= 0) {
                    // Optional: Add action on Enter key
                    // window.location.href = tableRows[currentIndex].getAttribute("data-url");
                }
            });

            // Highlight row on mouse click
            tableRows.forEach((row, index) => {
                row.addEventListener("click", function () {
                    currentIndex = index;
                    updateRowHighlight();
                });

                row.addEventListener("dblclick", function () {
                    // Optional: Add action on double click
                    // window.location.href = row.getAttribute("data-url");
                });
            });
        });

        function printReport() {
            // Only allow printing if there's data to print
            <% if (fromDate && toDate && agingData.transactions.length > 0) { %>
                const printContents = document.getElementById('printableContent').innerHTML;
                const styles = document.getElementById('printStyles') ? document.getElementById('printStyles').innerHTML : '';
                const title = 'Aging Report - <%= account ? account.name : "" %>';

                const printWindow = window.open('', '_blank', 'width=1000,height=600,scrollbars=yes,resizable=yes');

                printWindow.document.open();
                printWindow.document.write(`
                    <!DOCTYPE html>
                    <html>
                    <head>
                        <title>${title}</title>
                        <style>
                            body {
                                font-family: Arial, sans-serif;
                                font-size: 12px;
                                margin: 20px;
                            }
                            ${styles}
                            .print-header {
                                text-align: center;
                                margin-bottom: 20px;
                            }
                            .print-header h2 {
                                margin-bottom: 5px;
                            }
                            .print-header h3 {
                                margin-top: 0;
                            }
                            table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-top: 10px;
                            }
                            th, td {
                                border: 1px solid #ddd;
                                padding: 6px;
                                text-align: left;
                            }
                            th {
                                background-color: #f2f2f2;
                            }
                            .text-right {
                                text-align: right;
                            }
                            .text-danger {
                                color: #dc3545;
                            }
                            .text-success {
                                color: #28a745;
                            }
                            .footer {
                                margin-top: 20px;
                                text-align: right;
                                font-size: 11px;
                            }
                        </style>
                    </head>
                    <body>
                        <div class="print-header">
                            <h2><%= currentCompanyName %></h2>
                            <h3>Ageing Receivables/Payables</h3>
                            <hr>
                            <h4 class="text-primary">
                            <i class="fas fa-user-circle"></i> Account: <%= account.name %>
                            </h4>
                        </div>
                        ${printContents}
                        <div class="footer">
                            <p class="text-muted">Generated on: <%= new Date().toLocaleString() %> |
                            Printed by: <%= user.name %> | Page 1 of 1
                        </div>
                        <script>
                            // Auto-print when window loads
                            window.onload = function() {
                                setTimeout(function() {
                                    window.print();
                                }, 300);
                            };
                            
                            // Add event listener for after print
                            window.matchMedia('print').addListener(function(mql) {
                                if (!mql.matches) {
                                    // Print dialog closed - window remains open
                                    console.log('Print dialog closed');
                                }
                            });
                        <\/script>
                    </body>
                    </html>
                `);
                printWindow.document.close();
            <% } else { %>
                alert('No data available to print. Please generate a report first.');
            <% } %>
        }

        function moveToNextVisibleInput(currentElement) {
            const formElements = Array.from(document.querySelectorAll('input, select, textarea, button'));
            const currentIndex = formElements.indexOf(currentElement);

            for (let i = currentIndex + 1; i < formElements.length; i++) {
                if (formElements[i].offsetParent !== null) {
                    formElements[i].focus();
                    break;
                }
            }
        }

        // Attach event listeners for form navigation
        document.querySelectorAll('form input, form select').forEach(input => {
            input.addEventListener('keydown', function (event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    moveToNextVisibleInput(event.target);
                }
            });
        });
    </script>
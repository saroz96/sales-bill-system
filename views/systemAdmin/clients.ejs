<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Clients</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 20px;
        }

        .table-wrapper {
            margin-top: 20px;
        }

        .table-header {
            background-color: #343a40;
            color: white;
        }

        .btn-custom {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

        .btn-renew {
            background-color: #28a745;
            color: white;
        }
    </style>
</head>

<body>

    <div class="container mx-auto px-4">
        <div class="card shadow-lg rounded-lg">
            <div class="card-header table-header py-3 px-4">
                <h2 class="card-title mb-0 text-lg font-semibold">All Clients</h2>
            </div>
            <div class="card-body p-4">
                <% if (clients.length> 0) { %>
                    <div class="table-wrapper overflow-x-auto">
                        <table class="table table-striped table-hover w-full">
                            <thead>
                                <tr>
                                    <th class="py-2 px-4 text-left">ID</th>
                                    <th class="py-2 px-4 text-left">Name</th>
                                    <th class="py-2 px-4 text-left">Email</th>
                                    <th class="py-2 px-4 text-left">Date Format</th>
                                    <th class="py-2 px-4 text-left">Renew Upto</th>
                                    <th class="py-2 px-4 text-left">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% clients.forEach(client=> { %>
                                    <tr>
                                        <td class="py-2 px-4">
                                            <%= client._id %>
                                        </td>
                                        <td class="py-2 px-4">
                                            <a href="/admin/clients/<%= client._id %>/renew">
                                                <%= client.name %>
                                            </a>
                                        </td>
                                        <td class="py-2 px-4">
                                            <%= client.email %>
                                        </td>
                                        <td class="py-2 px-4">
                                            <%=client.dateFormat%>
                                        </td>
                                        <td class="py-2 px-4">
                                            <% if (client.renewalDate) { %>
                                                <%= client.renewalDate %>
                                                    <% } else { %>
                                                        Demo Version
                                                        <% } %>
                                        </td>
                                        <td class="py-2 px-4">
                                            <a href="/admin/clients/<%= client._id %>"
                                                class="btn btn-info btn-custom">View</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="alert alert-info py-2 px-4 rounded-lg">
                            No clients found.
                        </div>
                        <% } %>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
</body>

</html>
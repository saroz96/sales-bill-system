<script>
    function printBill() {
        // Get the printable content and styles
        const printContents = document.getElementById('printableContent').innerHTML;
        const styles = document.getElementById('printStyles') ? document.getElementById('printStyles').innerHTML : '';
        
        // Create a new window for printing
        const printWindow = window.open('', '_blank', 'width=800,height=600');
        
        // Write the content to the new window
        printWindow.document.open();
        printWindow.document.write(`
            <!DOCTYPE html>
            <html>
            <head>
                <title>Print - Aging Report</title>
                <style>${styles}</style>
            </head>
            <body>
                ${printContents}
                <script>
                    // Automatically trigger print when window loads
                    window.onload = function() {
                        setTimeout(function() {
                            window.print();
                            // Close the window after printing (optional)
                            // window.close();
                        }, 200);
                    };
                <\/script>
            </body>
            </html>
        `);
        printWindow.document.close();
    }
</script>
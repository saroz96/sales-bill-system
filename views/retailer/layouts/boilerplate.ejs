            <script>
                function showLoader() {
                    document.getElementById("global-loader").style.display = "flex";
                    updateLoaderPercentage();
                }

                function hideLoader() {
                    document.getElementById("global-loader").style.display = "none";
                }

                function updateLoaderPercentage() {
                    let percentage = 0;
                    const loaderPercentage = document.getElementById("loader-percentage");

                    // Simulate loading progress
                    const interval = setInterval(() => {
                        percentage += 10; // Increment by 10%
                        loaderPercentage.textContent = `${percentage}%`;

                        if (percentage >= 100) {
                            clearInterval(interval); // Stop when 100% is reached
                        }
                    }, 100); // Update every 100ms
                }

                document.addEventListener("DOMContentLoaded", function () {
                    // Prevent loader on reload
                    if (performance.navigation.type === 1) {
                        hideLoader();
                        return;
                    }

                    // Handle form submissions
                    const forms = document.querySelectorAll("form");

                    forms.forEach(function (form) {
                        // Skip the loader for the fiscal year switch form
                        if (form.id === "switchFiscalYearForm") {
                            form.addEventListener("submit", function (event) {
                                // Check if the form has a delete action (though unlikely for this form)
                                if (form.action.includes("_method=DELETE")) {
                                    event.preventDefault();
                                    let userConfirmed = confirm("Are you sure you want to delete?");
                                    if (userConfirmed) {
                                        form.submit();
                                    }
                                }
                                // No showLoader() call here - this is what disables the loader
                            });
                            return; // Skip the rest of the form handling for this form
                        }

                        // Normal form handling for all other forms
                        form.addEventListener("submit", function (event) {
                            // Check if the form has a delete action
                            if (form.action.includes("_method=DELETE")) {
                                event.preventDefault(); // Stop immediate submission
                                let userConfirmed = confirm("Are you sure you want to delete?");

                                if (userConfirmed) {
                                    showLoader(); // Show spinner only after confirmation
                                    form.submit(); // Now submit the form
                                }
                            } else {
                                showLoader(); // Normal forms should display loader
                            }
                        });
                    });

                    // Handle link clicks (unchanged - loader will still show for links)
                    const links = document.querySelectorAll("a[href]");
                    links.forEach(function (link) {
                        link.addEventListener("click", function (event) {
                            const href = link.getAttribute("href");

                            if (
                                href !== "#" &&
                                href !== "#!" &&
                                (!link.hasAttribute("target") || link.getAttribute("target") !== "_blank") &&
                                link.hostname === window.location.hostname
                            ) {
                                showLoader();
                            }
                        });
                    });
                });

                // Hide loader if the page is restored from cache
                window.onpageshow = function (event) {
                    if (event.persisted) {
                        hideLoader();
                    }
                };

                // Show loader on page navigation
                window.addEventListener("beforeunload", function () {
                    showLoader();
                });

            </script>


<%- include('../layouts/boilerplate', { title: 'System Settings' , body: '' }) %>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  .settings-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .settings-card {
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
  }
  
  .settings-section {
    padding: 25px;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .settings-section:last-child {
    border-bottom: none;
  }
  
  .settings-section h2 {
    color: #2c3e50;
    margin-bottom: 25px;
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  .setting-item {
    margin-bottom: 20px;
    padding: 15px;
    background-color: #f8f9fa;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .setting-item:hover {
    background-color: #f1f3f5;
    transform: translateY(-2px);
  }
  
  .form-check-input {
    width: 1.2em;
    height: 1.2em;
    margin-top: 0.1em;
  }
  
  .form-check-label {
    margin-left: 8px;
    font-size: 1rem;
    font-weight: 500;
    color: #495057;
  }
  
  .btn-save {
    background-color: #4e73df;
    border: none;
    padding: 8px 20px;
    font-weight: 500;
    transition: all 0.3s;
  }
  
  .btn-save:hover {
    background-color: #3a5ec0;
    transform: translateY(-1px);
  }
  
  .btn-save:active {
    transform: translateY(0);
  }
  
  .section-divider {
    border-top: 2px solid #4e73df;
    opacity: 0.3;
    margin: 30px 0;
  }
  
  @media (max-width: 768px) {
    .setting-item {
      margin-bottom: 15px;
    }
    
    .settings-section h2 {
      font-size: 1.3rem;
    }
  }
</style>

<div class="container settings-container mt-4">
  <div class="card settings-card">
    <div class="card-body">
      <!-- Round-Off Settings Section -->
      <div class="settings-section">
        <h2><i class="fas fa-calculator me-2"></i> Round-Off Settings</h2>
        <div class="row">
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form action="/settings/roundoff-sales" method="post" class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input type="checkbox" class="form-check-input" id="roundOffSales" name="roundOffSales"
                    <%=settings && settings.roundOffSales ? 'checked' : '' %>>
                  <label class="form-check-label" for="roundOffSales">Round Off Sales</label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form action="/settings/roundoff-sales-return" method="post" class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input type="checkbox" class="form-check-input" id="roundOffSalesReturn"
                    name="roundOffSalesReturn" <%=settings && settings.roundOffSalesReturn ? 'checked' : '' %>>
                  <label class="form-check-label" for="roundOffSalesReturn">Round Off Sales Rtn</label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form action="/settings/roundoff-purchase" method="post" class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input type="checkbox" class="form-check-input" id="roundOffPurchase"
                    name="roundOffPurchase" <%=settings && settings.roundOffPurchase ? 'checked' : '' %>>
                  <label class="form-check-label" for="roundOffPurchase">Round Off Purchase</label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form action="/settings/roundoff-purchase-return" method="post" class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input type="checkbox" class="form-check-input" id="roundOffPurchaseReturn"
                    name="roundOffPurchaseReturn" <%=settings && settings.roundOffPurchaseReturn ? 'checked' : '' %>>
                  <label class="form-check-label" for="roundOffPurchaseReturn">Round Off Purchase Rtn</label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      
      <div class="section-divider"></div>
      
      <!-- Display Settings Section -->
      <div class="settings-section">
        <h2><i class="fas fa-desktop me-2"></i> Display Settings</h2>
        <div class="row">
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form method="POST" action="/settings/update" class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input class="form-check-input" type="checkbox" id="displayTransactions"
                    name="displayTransactions" <%=settings && settings.displayTransactions ? 'checked' : '' %>>
                  <label class="form-check-label" for="displayTransactions">
                    Show Trans. in Sales
                  </label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form method="POST" action="/settings/updateDisplayTransactionsForSalesReturn"
                class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input class="form-check-input" type="checkbox" id="displayTransactionsForSalesReturn"
                    name="displayTransactionsForSalesReturn" <%=settings &&
                    settings.displayTransactionsForSalesReturn ? 'checked' : '' %>>
                  <label class="form-check-label" for="displayTransactionsForSalesReturn">
                    Show Trans. in Sales Rtn
                  </label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form method="POST" action="/settings/PurchaseTransactionDisplayUpdate" class="needs-validation"
                novalidate>
                <div class="form-check d-flex align-items-center">
                  <input class="form-check-input" type="checkbox" id="displayTransactionsForPurchase"
                    name="displayTransactionsForPurchase" <%=settings &&
                    settings.displayTransactionsForPurchase ? 'checked' : '' %>>
                  <label class="form-check-label" for="displayTransactionsForPurchase">
                    Show Trans. in Purchase
                  </label>
                </div>
                <button type="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
          
          <div class="col-md-6 col-lg-3">
            <div class="setting-item">
              <form method="POST" action="/settings/PurchaseReturnTransactionDisplayUpdate"
                class="needs-validation" novalidate>
                <div class="form-check d-flex align-items-center">
                  <input class="form-check-input" type="checkbox" id="displayTransactionsForPurchaseReturn"
                    name="displayTransactionsForPurchaseReturn" <%=settings &&
                    settings.displayTransactionsForPurchaseReturn ? 'checked' : '' %>>
                  <label class="form-check-label" for="displayTransactionsForPurchaseReturn">
                    Show Trans. in Purc. Rtn
                  </label>
                </div>
                <button type="="submit" class="btn btn-save mt-3">
                  <i class="fas fa-save me-1"></i> Save
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Enhanced form validation with feedback
  (function () {
    'use strict';
    
    // Add loading state to buttons
    const forms = document.querySelectorAll('.needs-validation');
    
    forms.forEach(form => {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        } else {
          const submitBtn = form.querySelector('button[type="submit"]');
          submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> Saving...';
          submitBtn.disabled = true;
        }
        
        form.classList.add('was-validated');
      }, false);
      
      // Reset button state if form validation fails
      form.addEventListener('invalid', function() {
        const submitBtn = form.querySelector('button[type="submit"]');
        submitBtn.innerHTML = '<i class="fas fa-save me-1"></i> Save';
        submitBtn.disabled = false;
      }, true);
    });
    
    // Add success feedback after save
    if (window.location.search.includes('saved=true')) {
      const toast = document.createElement('div');
      toast.className = 'position-fixed bottom-0 end-0 p-3';
      toast.style.zIndex = '11';
      toast.innerHTML = `
        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="toast-header bg-success text-white">
            <strong class="me-auto">Success</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
          <div class="toast-body">
            Settings saved successfully!
          </div>
        </div>
      `;
      document.body.appendChild(toast);
      
      // Remove toast after 3 seconds
      setTimeout(() => {
        toast.remove();
      }, 3000);
    }
  })();
  
  // Add keyboard navigation between settings
  document.addEventListener('keydown', function(e) {
    if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
      const current = document.activeElement;
      const inputs = Array.from(document.querySelectorAll('.form-check-input'));
      const currentIndex = inputs.indexOf(current);
      
      if (currentIndex >= 0) {
        if (e.key === 'ArrowRight' && currentIndex < inputs.length - 1) {
          inputs[currentIndex + 1].focus();
        } else if (e.key === 'ArrowLeft' && currentIndex > 0) {
          inputs[currentIndex - 1].focus();
        }
      }
    }
  });
</script>
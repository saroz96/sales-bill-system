                let unit = Math.pow(1000, scales.length - i - 1);
                let currentNum = Math.floor(num / unit);

                if (currentNum > 0) {
                    words += convertHundreds(currentNum) + ' ' + scales[scales.length - i - 1] + ' ';
                }

                num %= unit;
            }


    <div class="container-fluid mt-4 wow-form">
        <div class="row">
            <div class="col">
                <div class=" card mt-4 shadow-lg p-4 animate__animated animate__fadeInUp expanded-card">
                    <h1 class="mt-5">Units</h1>

                    <!-- Add Units Form -->
                    <div class="card mt-4">
                        <div class="card-header">
                            Add New Unit
                        </div>
                        <div class="card-body">
                            <form action="/units" method="post">
                                <div class="form-group">
                                    <label for="name">Unit Name <i style="color: red;">*</i></label>
                                    <input type="text" class="form-control" id="name" name="name"
                                        placeholder="Enter unit (e.g., kg, liters, pieces)" autocomplete="off" autofocus
                                        required>
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary">Add Unit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Existing Units List -->
            <div class="col">
                <div class="card mt-4 shadow-lg p-4 animate__animated animate__fadeInUp" style="height: 600px;">
                    <h1 style="text-align: center; text-decoration: underline;">Existing Units</h1>
                    <!-- Print and Back Buttons -->
                    <div class="row">
                        <div class="col-2">
                            <button id="backButton" class="back-button">
                                <span class="icon">‚Üê</span> Back
                            </button>
                        </div>
                        <div class="col-1">
                            <div class="btn btn-primary" onclick="printUnits()"><i class="bi bi-printer"></i></div>
                        </div>
                        <div class="col">
                            <!-- Search Form -->
                            <form class="mb-4">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="searchUnitInput"
                                        placeholder="Search units by name..." autocomplete="off">
                                </div>
                            </form>
                        </div>
                    </div>
                    <div style="max-height: 400px; overflow-y: auto;">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Unit Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="unitsList">
                                <% if (units && units.length> 0) { %>
                                    <% units.sort((a, b)=> a.name.localeCompare(b.name)); %>
                                        <!-- Sorting units alphabetically -->
                                        <% units.forEach((unit, index)=> { %>
                                            <tr class="searchUnitClass">
                                                <td><strong>
                                                        <%=index +1 %>. <%= unit.name %>
                                                    </strong></td>
                                                <td>
                                                    <button class="btn btn-sm btn-warning"
                                                        onclick="editUnit('<%= unit._id %>', '<%= unit.name %>')"><i
                                                            class="fas fa-edit"></i></button>
                                                    <form action="/units/<%= unit._id %>?_method=DELETE" method="post"
                                                        class="d-inline" onsubmit="return confirmDeletion()">
                                                        <button type="submit" class="btn btn-sm btn-danger"><i
                                                                class="fas fa-trash"></i></button>
                                                    </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="2">No units available</td>
                                                    </tr>
                                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Edit Unit Modal -->
        <div class="modal fade" id="editUnitModal" tabindex="-1" aria-labelledby="editUnitModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">

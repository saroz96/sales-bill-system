{
  "name": "sales-bill-system",
  "version": "1.0.0",
  "description": "A billing software to manage sales and stock",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node app.js",
    "electron": "electron .",
    "package-win": "electron-packager . sales-bill-system --platform=win32 --arch=x64 --out=dist --overwrite --electron-version=34.2.0",
    "dist": "electron-builder --win",
    "package": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "country-state-city": "^3.2.1",
    "ejs": "^3.1.10",
    "ejs-mate": "^4.0.0",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "fs": "^0.0.1-security",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "mongoose": "^8.4.4",
    "nepali-date": "^0.1.3",
    "nepali-date-converter": "^3.3.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.15.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "electron-winstaller": "^5.4.0",
    "nodemon": "^3.1.9"
  },
  "build": {
    "appId": "com.yourname.sales-bill-system",
    "productName": "sales-bill-system",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icons.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Company</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">
    <style>
        body {
            background-color: #f0f2f5;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control,
        .form-select {
            padding: 10px;
            border-radius: 4px;
        }

        .btn-primary {
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .select2-container .select2-selection--single {
            height: 38px;
            padding: 5px 10px;
        }

        .current-date {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Create a New Company</h1>
        <form action="/company" method="POST" class="needs-validation" novalidate>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Company Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    <div class="invalid-feedback">Please enter the company name.</div>
                </div>

                <div class="col-md-6">
                    <label for="country" class="form-label">Country:</label>
                    <select class="form-select" id="country" name="country" required>
                        <option value="Nepal">Nepal</option>
                    </select>
                    <div class="invalid-feedback">Please select a country.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="state" class="form-label">State:</label>
                    <input type="text" class="form-control" id="state" name="state" required>
                    <div class="invalid-feedback">Please enter the state.</div>
                </div>

                <div class="col-md-6">
                    <label for="city" class="form-label">City:</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                    <div class="invalid-feedback">Please enter the city.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="address" class="form-label">Address:</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                    <div class="invalid-feedback">Please enter the address.</div>
                </div>

                <div class="col-md-6">
                    <label for="pan" class="form-label">PAN:</label>
                    <input type="text" class="form-control" id="pan" name="pan" required>
                    <div class="invalid-feedback">Please enter the PAN number.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="phone" class="form-label">Phone:</label>
                    <input type="tel" class="form-control" id="phone" name="phone" required>
                    <div class="invalid-feedback">Please enter a valid phone number.</div>
                </div>

                <div class="col-md-6">
                    <label for="ward" class="form-label">Ward No:</label>
                    <input type="number" class="form-control" id="ward" name="ward" required>
                    <div class="invalid-feedback">Please enter the ward number.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="email" class="form-label">Company Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                    <div class="invalid-feedback">Please enter a valid email.</div>
                </div>

                <div class="col-md-6">
                    <label for="tradeType" class="form-label">Trade Type:</label>
                    <select class="form-select" id="tradeType" name="tradeType" required>
                        <option value="">Select Trade Type</option>
                        <option value="Wholeseller">Wholeseller</option>
                        <option value="Retailer">Retailer</option>
                        <option value="Pharmacy">Pharmacy</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="invalid-feedback">Please select a trade type.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label for="dateFormat" class="form-label">Preferred Date Format:</label>
                    <select id="dateFormat" class="form-select" name="dateFormat">
                        <option>Select date format</option>
                        <option value="nepali">Nepali Date</option>
                        <option value="english">English Date</option>
                    </select>
                </div>
                <div class="row g-3">
                    <div class="english-date-fields row">
                        <div class="col-md-3">
                            <label for="startDateEnglish" class="form-label">Fiscal Year Start Date English:</label>
                            <input type="date" class="form-control" id="startDateEnglish" name="startDateEnglish"
                                value="<%= new Date().toISOString().split('T')[0] %>">
                        </div>
                    </div>
                    <div class="nepali-date-fields row">
                        <div class="col-md-3">
                            <label for="startDateNepali" class="form-label">Fiscal Year Start Date Nepali:</label>
                            <input type="date" class="form-control" id="startDateNepali" name="startDateNepali"
                                value="<%= nepaliDate || '' %>" placeholder="YYYY/MM/DD">
                        </div>
                    </div>
                </div>


                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Create Company</button>
                </div>
        </form>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        // Initialize Select2 for country and trade type dropdowns
        $('#country').select2();
        $('#tradeType').select2();

        // Fetch country data
        fetch('https://restcountries.com/v3.1/all')
            .then(response => response.json())
            .then(data => {
                const countrySelect = $('#country');
                data.sort((a, b) => a.name.common.localeCompare(b.name.common));
                data.forEach(country => {
                    countrySelect.append(new Option(country.name.common, country.name.common));
                });
            })
            .catch(error => console.error('Error fetching country data:', error));

        // Show/hide fields based on selected date format
        $('#dateFormat').change(function () {
            const selectedFormat = $(this).val();
            if (selectedFormat === 'nepali') {
                $('.nepali-date-fields').show();
                $('.english-date-fields').hide();
            } else if (selectedFormat === 'english') {
                $('.english-date-fields').show();
                $('.nepali-date-fields').hide();
            } else {
                $('.nepali-date-fields').hide();
                $('.english-date-fields').hide();
            }
        });


        // Client-side form validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    });
</script>
</body>

</html>
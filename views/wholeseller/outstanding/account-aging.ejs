<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Aging Report</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h1>Account Aging Report</h1>
        <form id="account-aging-form">
            <div class="form-group">
                <label for="accountIds">Enter Account IDs (comma-separated):</label>
                <input type="text" id="accountIds" class="form-control" placeholder="e.g. 1,2,3" required>
            </div>
            <button type="submit" class="btn btn-primary">Get Aging Report</button>
        </form>

        <div id="report" class="mt-4"></div>
    </div>

    <script>
        document.getElementById('account-aging-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const accountIds = document.getElementById('accountIds').value;

            try {
                const response = await fetch(`/api/account-aging?accountIds=${accountIds}`);
                const data = await response.json();

                if (response.ok) {
                    displayReport(data);
                } else {
                    alert('Error fetching report: ' + data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while fetching the report.');
            }
        });

        function displayReport(report) {
            const reportDiv = document.getElementById('report');
            reportDiv.innerHTML = `<h3>Aging Report</h3>`;
            let tableHtml = `<table class="table">
                <thead>
                    <tr>
                        <th>Account Name</th>
                        <th>Current</th>
                        <th>30 Days</th>
                        <th>60 Days</th>
                        <th>90 Days</th>
                        <th>Over 90 Days</th>
                    </tr>
                </thead>
                <tbody>`;

            report.forEach(item => {
                tableHtml += `<tr>
                    <td>${item.accountName}</td>
                    <td>${item.current}</td>
                    <td>${item._30Days}</td>
                    <td>${item._60Days}</td>
                    <td>${item._90Days}</td>
                    <td>${item.over90}</td>
                </tr>`;
            });

            tableHtml += `</tbody></table>`;
            reportDiv.innerHTML += tableHtml;
        }
    </script>
</body>

</html>
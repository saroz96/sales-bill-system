    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard | <%= user.name %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <% if (isAdminOrSupervisor) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/company/new">
                                <i class="fas fa-plus-circle me-1"></i>Create Company
                            </a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="dashboard-container">
        <div class="card dashboard-card animate__animated animate__fadeInUp">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="welcome-title">Welcome, <%= user.name %></h1>
                        <h2 class="card-title">Your Companies</h2>
                    </div>
                    <div class="search-container">
                        <div class="input-group">
                            <span class="input-group-text bg-white">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" class="form-control search-input" id="searchInput" placeholder="Search companies..." autocomplete="off">
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-body p-0">
                <% if (messages && messages.length) { %>
                    <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                        <i class="fas fa-check-circle me-2"></i><%= messages %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <% if (error && error.length) { %>
                    <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                
                <div class="no-results" id="noResultsMessage">
                    <i class="fas fa-building"></i>
                    <h4>No Companies Found</h4>
                    <p>Try adjusting your search or create a new company</p>
                </div>
                
                <% if (companies.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Company Name</th>
                                    <th>Trade Type</th>
                                    <th>Date Format</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="companyList">
                                <% companies.forEach((company, index) => { %>
                                    <tr class="searchable-row" tabindex="0" data-id="<%= company._id %>">
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <strong><%= company.name %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary"><%= company.tradeType %></span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-dark"><%= company.dateFormat.charAt(0).toUpperCase() + company.dateFormat.slice(1) %></span>
                                        </td>
                                        <td class="text-end">
                                            <div class="action-buttons d-flex justify-content-end">
                                                <form action="/switch/<%= company._id %>" method="GET" class="me-2">
                                                    <button type="submit" class="btn btn-primary btn-sm open-btn">
                                                        <i class="fas fa-door-open me-1"></i>Open
                                                    </button>
                                                </form>
                                                <a href="/company/<%= company._id %>" class="btn btn-info btn-sm view-btn" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                        <h4>No Companies Available</h4>
                        <p class="text-muted">You don't have any companies yet. Create your first company to get started.</p>
                        <a href="/company/new" class="btn btn-primary mt-3">
                            <i class="fas fa-plus-circle me-2"></i>Create Company
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Loader -->
    <div id="loader" style="display: none;">
        <div class="spinner"></div>
        <p id="loader-percentage-text">Loading... <span id="loader-percentage">0%</span></p>
    </div>


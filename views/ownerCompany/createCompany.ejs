        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        .form-label {
            font-weight: bold;
        }

        .form-control,
        .form-select {
            padding: 10px;
            border-radius: 4px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            padding: 10px;
            width: 100%;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .select2-container .select2-selection--single {
            height: 38px;
            padding: 5px 10px;
        }

        .current-date {
            font-weight: bold;
        }

        .invalid-feedback {
            display: none;
        }

        .was-validated .form-control:invalid,
        .was-validated .form-select:invalid {
            border-color: #dc3545;
        }

        .was-validated .form-control:invalid~.invalid-feedback,
        .was-validated .form-select:invalid~.invalid-feedback {
            display: block;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
        }

        .container {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .btn-primary,
        .btn-info {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover,
        .btn-info:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .navbar {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .search-input {
            max-width: 400px;
            margin-bottom: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .alert {
            position: relative;
        }

        .btn-close {
            position: absolute;
            top: 8px;
            right: 10px;
            font-size: 1.2em;
            color: #666;
            cursor: pointer;
        }

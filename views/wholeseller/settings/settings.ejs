<div class="form-control">
    <%- include('../layouts/boilerplate', { title: '' , body: '' }) %>
</div>
<div class="container mt-5" id="mainContainer">
    <h1>Round-Off Settings</h1>
    <div class="row">
        <div class="col">
            <form action="/settings/roundoff-sales" method="post" class="needs-validation" novalidate>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="roundOffSales" name="roundOffSales" <%=settings
                        && settings.roundOffSales ? 'checked' : '' %>>
                    <label class="form-check-label" for="roundOffSales">Round Off final amount in sales</label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
        <div class="col">
            <form action="/settings/roundoff-sales-return" method="post" class="needs-validation" novalidate>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="roundOffSalesReturn" name="roundOffSalesReturn"
                        <%=settings && settings.roundOffSalesReturn ? 'checked' : '' %>>
                    <label class="form-check-label" for="roundOffSalesReturn">Round Off final amount in sales
                        return</label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
        <div class="col">
            <form action="/settings/roundoff-purchase" method="post" class="needs-validation" novalidate>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="roundOffPurchase" name="roundOffPurchase"
                        <%=settings && settings.roundOffPurchase ? 'checked' : '' %>>
                    <label class="form-check-label" for="roundOffPurchase">Round Off final amount in purchase</label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>

        <div class="col">
            <form action="/settings/roundoff-purchase-return" method="post" class="needs-validation" novalidate>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="roundOffPurchaseReturn"
                        name="roundOffPurchaseReturn" <%=settings && settings.roundOffPurchaseReturn ? 'checked' : ''
                        %>>
                    <label class="form-check-label" for="roundOffPurchaseReturn">Round Off final amount in purchase
                        return</label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
    </div>
    <hr style="border: 0.5px solid blue;">

    <div class="row">
        <h1>Display Settings</h1>
        <div class="col">
            <form method="POST" action="/settings/update" class="needs-validation" novalidate>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="displayTransactions" name="displayTransactions"
                        <%=settings && settings.displayTransactions ? 'checked' : '' %>>
                    <label class="form-check-label" for="displayTransactions">
                        Display Transactions in Sales Bill
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>

        <div class="col">
            <form method="POST" action="/settings/updateDisplayTransactionsForSalesReturn" class="needs-validation"
                novalidate>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="displayTransactionsForSalesReturn"
                        name="displayTransactionsForSalesReturn" <%=settings &&
                        settings.displayTransactionsForSalesReturn ? 'checked' : '' %>>
                    <label class="form-check-label" for="displayTransactionsForSalesReturn">
                        Display Transactions Sales Bill in Sales Return
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>

        <div class="col">
            <form method="POST" action="/settings/PurchaseTransactionDisplayUpdate" class="needs-validation" novalidate>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="displayTransactionsForPurchase"
                        name="displayTransactionsForPurchase" <%=settings && settings.displayTransactionsForPurchase
                        ? 'checked' : '' %>>
                    <label class="form-check-label" for="displayTransactionsForPurchase">
                        Display Transactions in Purchase Bill
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
        <div class="col">
            <form method="POST" action="/settings/PurchaseReturnTransactionDisplayUpdate" class="needs-validation"
                novalidate>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="displayTransactionsForPurchaseReturn"
                        name="displayTransactionsForPurchaseReturn" <%=settings &&
                        settings.displayTransactionsForPurchaseReturn ? 'checked' : '' %>>
                    <label class="form-check-label" for="displayTransactionsForPurchaseReturn">
                        Display Purchase Transactions in Purchase Return
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save</button>
            </form>
        </div>
    </div>
</div>
<script>
    // Add Bootstrap validation to form
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>


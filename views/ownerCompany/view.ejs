<!-- views/company/view.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Details</title>
    <!-- Bootstrap CSS for improved styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css">

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 30px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .company-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .company-header h1 {
            font-size: 1.8em;
            color: #007bff;
        }

        .company-section {
            margin-bottom: 20px;
        }

        .company-section h3 {
            font-size: 1.3em;
            color: #343a40;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .btn-primary {
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .user-list li {
            margin-bottom: 5px;
        }

        /**header**/
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
        }

        .container {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .btn-primary,
        .btn-info {
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover,
        .btn-info:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .navbar {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .search-input {
            max-width: 400px;
            margin-bottom: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .alert {
            position: relative;
        }

        .btn-close {
            position: absolute;
            top: 8px;
            right: 10px;
            font-size: 1.2em;
            color: #666;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/dashboard">Dashboard | <%= user.name %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <% if (isAdminOrSupervisor) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/company/new">Create New Company</a>
                    </li>
                    <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="company-header">
            <h1>Company Details</h1>
        </div>
        <div class="row">
            <div class="col">
                <!-- Company Details Section -->
                <div class="company-section">
                    <h3>General Information</h3>
                    <p><strong>Name:</strong>
                        <%= company.name %>
                    </p>
                    <p><strong>Address:</strong>
                        <%= company.address %>
                    </p>
                    <p><strong>Country:</strong>
                        <%= company.country %>
                    </p>
                    <p><strong>State:</strong>
                        <%= company.state %>
                    </p>
                    <p><strong>City:</strong>
                        <%= company.city %>
                    </p>
                    <p><strong>Ward:</strong>
                        <%= company.ward %>
                    </p>
                    <p><strong>PAN:</strong>
                        <%= company.pan %>
                    </p>
                    <p><strong>Phone:</strong>
                        <%= company.phone %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= company.email %>
                    </p>
                    <p><strong>Trade Type:</strong>
                        <%= company.tradeType %>
                    </p>
                    <p><strong>Valid UpTo:</strong>
                        <%= company.renewalDate?company.renewalDate:'Demo Version'%>
                    </p>
                    <p><strong>Date Format:</strong>
                        <%= company.dateFormat.charAt(0).toUpperCase() + company.dateFormat.slice(1) %>
                    </p>
                </div>
            </div>
            <div class="col">
                <!-- Owner Information Section -->
                <div class="company-section">
                    <h3>Owner Information</h3>
                    <p><strong>Name:</strong>
                        <%= company.owner.name %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= company.owner.email %>
                    </p>
                </div>
            </div>
            <div class="col">
                <!-- Fiscal Year Section -->
                <div class="company-section">
                    <h3>Fiscal Year</h3>
                    <% if (company.fiscalYear) { %>
                        <p><strong>Fiscal Year ID:</strong>
                            <%= company.fiscalYear._id %>
                        </p>
                        <!-- Additional fiscal year details can go here -->
                        <% } else { %>
                            <p>No fiscal year available.</p>
                            <% } %>
                </div>
            </div>
        </div>
        <!-- Company Header with Edit Button -->
        <% if (isAdminOrSupervisor) { %>

            <div class="company-header d-flex justify-content-end">
                <a href="/company/edit/<%= company._id %>" class="btn btn-primary btn-sm me-2">Edit Company</a>
                <form action="/company/delete/<%= company._id %>?_method=DELETE" method="post" class="d-inline"
                    onsubmit="return confirmDeletion()">
                    <button type="submit" class="btn btn-sm btn-danger">Delete Company</button>
                </form>
            </div>

            <%}%>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>

        function confirmDeletion() {
            return confirm("Are you sure you want to delete this company?");
        }
    </script>
</body>

</html>
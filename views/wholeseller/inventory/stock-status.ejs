<div class="form-control">
    <%- include('../layouts/boilerplate', { title: 'Stock Status' , body: 'wholeseller >> inventory >> stock status' })
        %>
</div>
<div class="container mt-5" id="mainContainer">
    <h1>Stock Status</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Item Name</th>
                <th>Category</th>
                <th>Unit</th>
                <th>Total Stock</th>
                <th>Op. Stock</th>
                <th>Qty. In</th> <!-- New Column for Qty. In -->
                <th>Qty. Out</th> <!-- New Column for Qty. Out -->
                <th>Min Stock</th>
                <th>Max Stock</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach((item, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.category.name %>
                    </td>
                    <td>
                        <%= item.unit.name %>
                    </td>
                    <td>
                        <%= item.stock %>
                    </td>
                    <td>
                        <%= item.openingStockByFiscalYear.length ? item.openingStockByFiscalYear[0].openingStock : 0 %>
                    </td>
                    <td>
                        <%= item.totalQtyIn %>
                    </td> <!-- Display Total Qty. In -->
                    <td>
                        <%= item.totalQtyOut %>
                    </td> <!-- Display Total Qty. Out -->
                    <td>
                        <%= item.minStock %>
                    </td>
                    <td>
                        <%= item.maxStock %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>